{
	"image": "ghcr.io/tom-tan/ldc:1.30.0",
	"runArgs": [
		"--cap-add=SYS_PTRACE",
		"--security-opt",
		"seccomp=unconfined"
	],
	"extensions": [
		"sbg-rabix.benten-cwl",
		"webfreak.dlang-bundle"
	],
	"settings": {
		"d.dmdPath": "dmd",
		"d.stdlibPath": [
			// for dmd
			"/dlang/dc/src/druntime/import",
			"/dlang/dc/src/phobos",
			// for ldc and gdc
			"/dlang/dc/import"
		]
	},
	"remoteUser": "vscode",
	"postCreateCommand": "sudo apt-get update && sudo apt-get install -y --no-install-recommends python3 python3-pip && pip3 install schema-salad"
}
